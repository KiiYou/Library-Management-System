
@{
    ViewData["Title"] = "CalculatePenalty";
}

@model Library_Management_System.Models.Checkout

<h2>Penalty Details</h2>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-info">
        @ViewData["Message"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Book Title</th>
            <th>Checkout Date</th>
            <th>Due Date</th>
            <th>Return Date</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Book.Title</td>
            <td>@Model.CheckoutDate.ToShortDateString()</td>
            <td>@Model.DueDate.ToShortDateString()</td>
            <td>@Model.ReturnDate?.ToShortDateString()</td>
        </tr>
    </tbody>
</table>


